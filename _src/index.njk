---
layout: base.njk
templateClass: tmpl-home-page
---

{% set home = cms.home %}
<section id="intro" class="grid grid--2-1" aria-label="Welcome message" data-aos="fade-in">
  <div class="grid__item grid__item--2">
    {% set intro %}{% include './home/intro.md' %}{% endset %}
    {% markdown intro %}
  </div>
  <div class="flex grid__item grid__item--1">
    <div class="decorative flex">
      <img width="1440" height="1100" alt="" src="/img/landing_graphic.svg" />
      <svg id="skybox" viewBox="0 0 1920 1080"></svg>
    </div>
  </div>
</section>

<section id="projects" aria-label="Latest projects">
  <h3 data-aos="fade-in">Latest projects</h3>
  {% set projectlist = cms.allProjects | limit(3) %}
  {% include 'projectlist.njk' %}
  <div class="flex flex--end">
    <a href="/projects" class="link__arrow link__arrow--right">See all projects</a>
  </div>
</section>

<section id="posts" aria-label="Latest blog posts">
  <h3 data-aos="fade-in">Latest posts</h3>
  {% set postlist = cms.allPosts | limit(3) %}
  {% include 'postlist.njk' %}
  <div class="flex flex--end">
    <a href="/posts" class="link__arrow link__arrow--right">See all posts</a>
  </div>
</section>

<script src="/js/starfield.js"></script>
