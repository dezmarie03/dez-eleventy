{% for post in postlist %}
  {% if loop.first %}<ul class="list--plain grid grid--3">{% endif %}
    <li class="grid__item">
      <a href="/posts/{{ post.slug }}" class="grid__item__link">
        <div class="grid__item__content">
          <div class="grid__item__image">
            <picture>
              <source srcset="{{ post.coverImg.responsiveImage.srcSet }}">
              <img src="{{ post.coverImg.responsiveImage.src }} " alt="{{ post.coverImg.alt }}" lazy="true">
            </picture>
          </div>
          <div class="grid__item__description">
            <h5>{{ post.title }}</h5>
            <p>{{ post.seoMeta.description }}</p>
          </div>
        </div>
      </a>
    </li>
  {% if loop.last %}</ul>{% endif %}
{% endfor %}
