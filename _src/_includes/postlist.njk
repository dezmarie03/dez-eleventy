{% for post in postlist %}
  {% if loop.first %}<ul class="list--plain grid grid--3">{% endif %}
    <li class="grid__item">
      <a href="/posts/{{ post.slug }}" class="grid__item__link" data-aos="fade-in">
        <div class="grid__item__content">
          <div class="grid__item__image" style="background-image: url({{ post.coverImg.responsiveImage.base64 }}); background-size: cover; padding-top: {{ 100.0 / post.coverImg.responsiveImage.aspectRatio }}%;">
            <picture>
              <source srcset="{{ post.coverImg.responsiveImage.webpSrcSet }}" type="image/webp">
              <source srcset="{{ post.coverImg.responsiveImage.srcSet }}">
              <img src="{{ post.coverImg.responsiveImage.src }}" alt="{{ post.coverImg.responsiveImage.alt }}" width="{{ post.coverImg.responsiveImage.width }}" height="{{ post.coverImg.responsiveImage.height }}" loading="lazy">
            </picture>
          </div>
          <div class="grid__item__description">
            <h5>{{ post.title }}</h5>
            <p>{{ post.seoMeta.description }}</p>
          </div>
        </div>
      </a>
    </li>
  {% if loop.last %}</ul>{% endif %}
{% endfor %}
